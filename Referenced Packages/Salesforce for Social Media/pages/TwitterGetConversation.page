<apex:page controller="sf4twitter.TwitterGetConversationController" action="{!getConversation}" tabstyle="sf4twitter__Twitter_Conversation__c" title="{!$Label.Get_Conversation}" 
showHeader="{!!console}" sidebar="{!!console}" >

<c:TwitterErrorMessage msgTitle="{!$Label.TWITTER_INSUFFICIENT_PRIVILEGES}" msg="{!msg}" retUrl="{!retUrl}" rendered="{!NOT(ISBLANK(msg))}"/>

<apex:outputPanel layout="none" rendered="{!ISBLANK(msg)}">

    <apex:sectionHeader title="{!HTMLENCODE($Label.Get_Conversation)}" />
    
    <apex:pageBlock title="{!$Label.Origin_Conversation}" >
        <apex:dataTable border="0" frame="none" rules="rows" cellpadding="0px" cellspacing="0px" value="{!originConversations}" var="c" width="100%" styleClass="list" rowClasses="dataRow odd, dataRow even" headerClass="headerRow" >
            <apex:column headerValue="{!$Label.Twitter_ID}" width="15%" >
                <apex:outputLink value="/{!c.Id}" target="_blank">{!c.sf4twitter__TwitterID__c}</apex:outputLink>
            </apex:column>
            <apex:column headerValue="{!$Label.Content}" value="{!c.sf4twitter__Content__c}" />
        </apex:dataTable>
    </apex:pageBlock>
    
    <apex:pageBlock title="{!$Label.New_Conversations}" >
        <apex:dataTable border="0" frame="none" rules="rows" cellpadding="0px" cellspacing="0px" value="{!conversations}" var="c" width="100%" styleClass="list" rowClasses="dataRow odd, dataRow even" headerClass="headerRow" rendered="{!hasConversations}" >
            <apex:column headerValue="{!$Label.Twitter_ID}" width="15%" >
                <apex:outputLink value="/{!c.conversation.Id}" target="_blank">{!c.conversation.sf4twitter__TwitterID__c}</apex:outputLink>
            </apex:column>
            <apex:column headerValue="{!$Label.Content}" value="{!c.conversation.sf4twitter__Content__c}" />
            <apex:column >
                <apex:outputLink value="{!c.valueLink}" target="_blank">{!c.message}</apex:outputLink>
            </apex:column>
        </apex:dataTable>
        <br />
        <apex:outputPanel >
            <apex:outputText value="{!errorMsg}" styleClass="errorMsg" rendered="{!if(LEN(valueLink) = 0, true, false)}" />
            <apex:outputLink value="{!valueLink}" rendered="{!if( LEN(valueLink) = 0, false, true)}" >{!errorMsg}</apex:outputLink>
        </apex:outputPanel>
        <a href="{!retUrl}" class="returnLink" style="margin-top:20px;display:block" >{!$Label.TWITTER_RETURN}</a>
    </apex:pageBlock>

</apex:outputPanel>

</apex:page>